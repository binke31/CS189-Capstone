<!-- Payment History (R) -->
<div data-role="content">
	<ul data-role="listview" data-divider-theme="b" data-inset="true">
		
		<% if @rentPayments.size > 0 %>
		
			<li data-role="list-divider" role="heading">
				Your Payments
			</li>
			<% @rentPayments.each do |payment| %>
				<li data-theme="c">
					<a href="/home/payment_history/<%= payment.id %>" data-transition="slide">
						<%= "$" + payment.paymentAmount.to_s + " - " + payment.paymentDate.strftime("%m/%d/%y") %>
					</a>
				</li>
			<% end %>
			
		<% else %>
		
			<li data-theme="c">
				You have no rent payments.
			</li>
			
		<% end %>
		
